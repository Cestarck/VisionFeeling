<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <h4>Signup</h4>
    <form action="/auth/signup" method="POST">
      <br>
      <div class="input-group input-group-sm mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-sm">Username</span>
        </div>
        <input type="text" class="form-control" name="username" id="username" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" placeholder="Enter username">
      </div>
      <div class="input-group input-group-sm mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-sm">Email address</span>
        </div>
        <input type="email" class="form-control" name="email" id="email" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" placeholder="Enter email">
      </div>
      <div class="input-group input-group-sm mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroup-sizing-sm">Password</span>
        </div>
        <input type="password" class="form-control" name="password" id="password" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" placeholder="Password">
      </div>

      <small id="usernameHelp" class="form-text text-muted">We'll never share your password with anyone else.</small>
      {{#if message }}
        <div class="alert alert-danger" role="alert">
          {{ message }}
        </div>
      {{/if}}
      <br>
      <button type="submit" class="btn btn-primary btn-block">Create Account</button>
      <br><br>
      <p class="account-message">Do you already have an account?
        <a href="/auth/login">Login</a>
      </p>
    </form>
  </div>
  <div class="col-md-4"></div>
</div>
